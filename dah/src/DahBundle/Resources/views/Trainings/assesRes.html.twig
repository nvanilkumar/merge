{% extends extend_view %}
{% block content %}
    <!-- HERO UNIT -->
    <section class="hero-unit-slider no-margin">
        <div id="carousel-hero" class="slick-carousel">
            <div class="main-background1">
                <div class="background-image"><br>

                    <div class="row">
                        <div class='col-md-2'></div>
                        <div class="col-md-8">
                            <div class="well well-lg text-center">
                                <h4 class='newstextcolor custom-wrap'>{{ 'account.YourResult'|trans }}</h4>
                                <hr/>
                                <p class='custom-wrap'><a href="{{ url('_view_training',{'tid':training.tid}) }}">{{ trainingres.tid.trainingTitle }}</a> <strong>:{{ 'account.Trainings'|trans }}</strong>  </p>
                                <p class='custom-wrap'>{{ trainingres.maxMarks }} <strong>:Max marks</strong>  </p>
                                <p class='custom-wrap'>{{ trainingres.correct }} <strong>:Your score</strong>  </p>
                                <p class='custom-wrap'>{{ trainingres.attemptNo }} <strong>:No. of attempts</strong>  </p>
                                <p class='custom-wrap'><span class='{% if trainingres.result == 'pass' %}green-text{% else %}red-text{% endif %}'>{{ trainingres.result|capitalize }}</span> <strong>:{{ 'account.YourResult'|trans }}</strong>  </p>
                                {% if trainingres.result == 'pass' %}
                                    <form method='post'>
                                        <button type="submit" class="btn btn-primary" id="" name="submit" value="submit" >{{ 'account.Requestforcertificate'|trans }}</button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                        <div class='col-md-2'></div>
                    </div>   


                    <br>

                </div>
            </div>
        </div>
    </section>
    <!-- END HERO UNIT -->
    <br/>


{% endblock %}