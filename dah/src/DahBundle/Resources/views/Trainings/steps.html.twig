     {% endif %} #}
    {% if training is defined and training.status == 'active' %}
        {% if enrolltab is defined and enrolltab == 'yes' %}
            <li role="presentation" class="{% if activetab is defined and activetab == 'enrollment' %}active{% endif %} {% if tablevel is defined and tablevel < 4 %}disabled{% endif %}">
                {% if tablevel is defined and tablevel < 1 %}
                    {{ 'addtraining.Enrolledstudents'|trans }}
                {% else %}
                    <a href="{% if inviteurl is defined %}{{ enrollurl }}{% else %}javascript:;{% endif %}">{{ 'addtraining.Enrolledstudents'|trans }}</a>
                {% endif %}
            </li>
        {% endif %} 
    {% endif %} 
    {% if training is defined and training.status == 'active' %}
        {% if enrolltab is defined and enrolltab == 'yes' %}
    <li role="presentation" class="{% if activetab is defined and activetab == 'material' %}active{% endif %} {% if tablevel is defined and tablevel < 5 %}disabled{% endif %}">
        {% if tablevel is defined and tablevel < 1 %}
            {{ 'addtraining.TrainingMaterial'|trans }}
        {% else %}
            <a href="{% if materialurl is defined %}{{ materialurl }}{% else %}javascript:;{% endif %}">{{ 'addtraining.TrainingMaterial'|trans }}</a>
        {% endif %}
       
    </li>
        {% endif %} 
        {% endif %}
