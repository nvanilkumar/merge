<form method="post" class="form-horizontal" id="view-profile-form" action="{{ url('_admin_create_assesment') }}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {% if mode == 'add' %}
            <h4 class="modal-title" id="myModalLabel">{{ 'addtraining.AddTF'|trans }}</h4>
        {% else %}
            <h4 class="modal-title" id="myModalLabel">{{ 'addtraining.EditTF'|trans }}</h4>
        {% endif %}
        
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-12 ">
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">{{ 'addtraining.Question'|trans }}</label>
                    <div class="col-sm-9">
                        
                        <input type="text" class="form-control" dir='rtl' id="" placeholder="Question(Arabic)" name="trainingName" value="">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">{{ 'common.CorrectOption'|trans }}</label>
                    <div class="col-sm-9">
                        <label class="radio-inline">
                            <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> {{ 'addtraining.True'|trans }}
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> {{ 'addtraining.False'|trans }}
                        </label>
                        
                    </div>
                </div>

            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'common.Close'|trans }}</button>
        <button type="submit" class="btn btn-primary">{{ 'common.SaveChanges'|trans }}</button>
    </div>
</form>





