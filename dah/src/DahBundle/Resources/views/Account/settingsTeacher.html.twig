<form class="form-horizontal" method="post" id="userinfo-form"  enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" name="fname" maxlength="100" id="" value="{% if app.request.get('fname')!=''  %}{{ app.request.get('fname') }}{% elseif user.fname is defined %}{{ user.fname }}{% endif %}" placeholder="First Name">
            {% if error.fname is defined %}<div class="form-error-content">{{ error.fname }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.FirstName'|trans }} <span class="red-text">*</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="100" name="lname" value="{% if app.request.get('lname')!=''  %}{{ app.request.get('lname') }}{% elseif user.lname is defined %}{{ user.lname }}{% endif %}" placeholder="Last Name">
            {% if error.lname is defined %}<div class="form-error-content">{{ error.lname }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.LastName'|trans }} <span class="red-text">*</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="email" class="form-control" id="" maxlength="150" name="email" value="{% if app.request.get('email')!=''  %}{{ app.request.get('email') }}{% elseif user.email is defined %}{{ user.email }}{% endif %}" placeholder="Email">
            {% if error.email is defined %}<div class="form-error-content">{{ error.email }}</div>{% endif %}
        </div>
        <label for="inputEmail3" class="col-sm-3 control-label">{{ 'account.EmailID'|trans }} <span class="red-text">*</span></label>
    </div>

    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="15" name="phone" value="{% if app.request.get('phone')!=''  %}{{ app.request.get('phone') }}{% elseif userinfo.phone is defined %}{{ userinfo.phone }}{% endif %}" placeholder="Phone number">
            {% if error.phone is defined %}<div class="form-error-content">{{ error.phone }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.Phonenumber'|trans }} <span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">

        <div class="col-sm-9">

            <input type="file" class="" id="imageUpload"  name="manualUpload"  accept='image/*'> 
            <input type="hidden" id="uploaded-file" name="uploadedFile" value="{%if app.request.get('uploadedFile')!=''%}{{app.request.get('uploadedFile')}}{%  elseif user.avatar  is defined %}{{ user.avatar  }}{% endif %} " />

            <div id="uploaded-image-holder">
                {%if app.request.get('uploadedFile')!=''%}     
                    <img src="{{ asset('uploads/')~app.request.get('uploadedFile') }}" alt="..." class="img-thumbnail">
                {%  elseif user.avatar  is defined and user.avatar!='' %}
                    <img src="{{ asset('uploads/')~user.avatar }}" alt="..." class="img-thumbnail">
                {% endif %} 
            </div>
            {% if error.manualUpload is defined %}<div class="form-error-content">{{ error.manualUpload }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label" >{{ 'account.ProfileImage'|trans }}</label>
    </div>  
    <div class="form-group">
        <div class="col-sm-9">
           <input type="file" class="" id="cvUpload"  name="cvUpload">   
            {% if error.cvUpload is defined %}<div class="form-error-content">{{ error.cvUpload }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.UploadCv'|trans }}</label>
    </div> 
    <div class="form-group">
        <div class="col-sm-9">
            {% if user.cv is defined and user.cv!='' %}
            <a class="btn btn-primary" href="{{ url('_teacher_download_cv',{'filename':user.cv})  }}" target="_blank" >
Download CV
</a>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.DownloadMyCv'|trans }}</label>
    </div>
    <div class="form-group">

        <div class="col-sm-9">
            <select dir='rtl' class='form-control' name='department'>
                <option value=''>Select</option>
                {% for department in departments %}
                    <option value='{{ department.deptid }}' {% if app.request.get('department')!='' and app.request.get('department')== department.deptid %}selected="selected"{% elseif userinfo.depid.deptid is defined and userinfo.depid.deptid == department.deptid %}selected="selected"{% endif %} >{{ department.department }}</option>
                {% endfor %}
            </select>
            {% if error.department is defined %}<div class="form-error-content">{{ error.department }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.Department'|trans }}<span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <textarea class="form-control" id="" name="bio"  placeholder="Bio">{% if app.request.get('bio')!=''  %}{{ app.request.get('bio') }}{% elseif userinfo.bio is defined %}{{ userinfo.bio }}{% endif %}</textarea>
            {% if error.bio is defined %}<div class="form-error-content">{{ error.bio }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.Bio'|trans }}</label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="40" name="exp" value="{% if app.request.get('exp')!=''  %}{{ app.request.get('exp') }}{% elseif userinfo.exp is defined %}{{ userinfo.exp }}{% endif %}" placeholder="Experience">
            {% if error.exp is defined %}<div class="form-error-content">{{ error.exp }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.TotalYearsofExperience'|trans }}<span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="150" name="qualification" value="{% if app.request.get('qualification')!=''  %}{{ app.request.get('qualification') }}{% elseif userinfo.qualification is defined %}{{ userinfo.qualification }}{% endif %}" placeholder="Qualification">
            {% if error.qualification is defined %}<div class="form-error-content">{{ error.qualification }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.Qualification'|trans }}<span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="250" name="school" value="{% if app.request.get('school')!=''  %}{{ app.request.get('school') }}{% elseif userinfo.school is defined %}{{ userinfo.school }}{% endif %}" placeholder="School">
            {% if error.school is defined %}<div class="form-error-content">{{ error.school }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.School'|trans }}<span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="text" class="form-control" id="" maxlength="250" name="location" value="{% if app.request.get('location')!=''  %}{{ app.request.get('location') }}{% elseif userinfo.location is defined %}{{ userinfo.location }}{% endif %}" placeholder="Location">
            {% if error.location is defined %}<div class="form-error-content">{{ error.location }}</div>{% endif %}
        </div>
        <label for="" class="col-sm-3 control-label">{{ 'account.Location'|trans }}<span class="red-text">&nbsp</span></label>
    </div>
    <div class="form-group">
        <div class=" col-sm-9">
            <button type="submit" name="submit" class="btn btn-lg btn-primary">{{ 'account.Submit'|trans }}</button>
        </div>
    </div>
</form>