{% extends extend_view %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-12 col-lg-3 pull-right">
                {% if user.role=='ROLE_TEACHER' %}
                    {% include 'DahBundle:Account:leftTeacher.html.twig' %}
                {% elseif user.role=='ROLE_STUDENT' %}
                    {% include 'DahBundle:Account:left.html.twig' %}
                {% endif %}
            </div>
            <div class="col-md-9 big-col col-sm-8 col-lg-9 col-xs-12 pull-right">
                <div class="page-header">
                    <h2>{{ 'account.AccountSettings'|trans }}</h2>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <ul class="nav nav-tabs  right-to-left"  >
                            <li role="presentation" class="active"><a href="#">{{ 'account.AccountSettings'|trans }}</a></li>
                            <li role="presentation"><a href="{{ url('_changepass') }}">{{ 'account.ChangePassword'|trans }}</a></li>
                        </ul>
                        <br/>
                        <div class="box">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-8">
                                        {% if user.role=='ROLE_TEACHER' %}
                                            {% include 'DahBundle:Account:settingsTeacher.html.twig' %}
                                        {% elseif user.role=='ROLE_STUDENT' %}
                                            {% include 'DahBundle:Account:settingsStudent.html.twig' %}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-2">
                                    </div>
                                </div>
                            </div><!-- /.box-body -->

                        </div> 
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}