        <div class="col-lg-8"><input type="password" name="confirmpassword"  class="form-control squared"  /></div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-lg-4">&nbsp;</label>
        <div class="col-lg-8"><input type="submit" class="btn btn-primary squared" value="Continue"  /> </div>
    </div>
