{% extends extend_view %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="main-content">
                <div class="page-header"><h4>Activity log</h4></div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="activity-feed">
                            {% for activity in activities %}
                                <div class="feed-item">
                                    <div class="date">{{ activity.logged_on|date("F jS\\, g:i:s a","AST") }}</div>
                                    <div class="text">{{ (activity.username~" "~activity.message)|raw }}</div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        
                        {% if paginate is defined and paginate|length>0 %}
                            <nav>
                                <ul class="pagination">
                                    {% for pg in paginate %}
                                        <li {% if pg.text==page %}class='active'{% endif %} >{% if pg.url is defined %}<a href="{{ pg.url }}">{{ pg.text }}</a>{% else %}<a>{{ pg.text }}</a>{% endif %}</li>
                                            {% endfor %}
                                </ul>
                            </nav>
                        {% endif %}
                    </div>     
                </div>
            </div>
        </div>
    </div>
                     
{% endblock %}
