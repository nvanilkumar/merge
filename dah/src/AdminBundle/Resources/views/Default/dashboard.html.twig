                            <div class="panel-body">
                                <h2><a href="{{ url('_admin_workshop') }}">{{ getWorkshopsCount() }}</a></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="panel panel-default text-center stats-panel squared">
                            <div class="panel-heading"><h4>Certificates Issued</h4></div>
                            <div class="panel-body">
                                <h2><a href="{{ url('_admin_certificates') }}">0</a></h2>
                            </div>
