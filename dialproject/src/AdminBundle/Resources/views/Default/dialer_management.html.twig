{% extends extend_view %}
{% block content %}

    <div class="container">

        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-heading text-center"><i class="fa fa-cog"></i> Settings
                </h3>
            </div>
        </div>

        <div class="setting_box">
            <form class="form-horizontal" method="post" id="form-admin-dialer-management">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-5">No. of agents <span class="reqire">*</span></label>

                            <input type="text" class="textbox-control col-md-7" name="no_of_agents" 
                                   value="{{no_of_agents}}" id="no_of_agents" placeholder="Campaign Name">
                        </div>
                        <div class="form-group">
                            <label class="col-md-5">No. to monitor <span class="reqire">*</span></label>

                            <input type="text" class="textbox-control col-md-7" name="extension" 
                                   value="{{extension}}" id="extension" placeholder="Extension">
                        </div>
                        <div class="form-group pull-right">

                            <button type="submit" class="btn btn-default theme_blue"><i class="fa fa-check"></i>save settings</button>
                        </div>
                    </div>
                </div>
            </form>         
        </div>
    </div>

{% endblock%}
