{% block content %}
    <!DOCTYPE html>
    <html lang="en" class="no-js">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <!-- Bootstrap 3.3.4 -->
            <link href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css" />
            <!-- Login Page CSS -->
            <link rel="stylesheet" href="{{ asset('assets/css/login-styles.css')}}" type="text/css" />
            <script src="{{asset('assets/plugins/jQuery/jQuery-2.2.0.min.js')}}"></script>
            <title>{{title}}</title>
        </head>
        <body class="login_page">
            <div class="container-fluid">
                <div class="container no-padding">
                    <div class="col-md-12">
                        <span class=""><i class="fa fa-minus" aria-hidden="true"></i></span>
                    </div>
                    <div class="col-md-12">
                        <div class="login_box">
                            <div class="login_logo"> <a href="#"><img src="{{ asset('assets/img/scopdial-logo-big.PNG')}}" alt="logo"/></a> </div>
                            <!-- /.login-logo -->
                            <div class="login_box_body">                    
                                <h3> Log into your account </h3>
                                {% if error %}
                                    <div class="alert alert-danger">
                                        {{ error.message|trans({},'validators') }}
                                    </div>
                                {% endif %}
                                <form action="{{ path("_widget_login") }}" method="post">
                                    <div class="form-group">Email Address</div>
                                    <div class="form-group has-feedback">
                                        <input type="text" class="form-control" placeholder="Email Address" name="username" value=""/>
                                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span> </div>
                                    <div class="form-group">Password</div>
                                    <div class="form-group has-feedback">
                                        <input type="password" class="form-control" placeholder="Password" name="password"/>
                                        <span class="glyphicon glyphicon-lock form-control-feedback"></span> </div>
                                    <div class="row">
                                        <!-- /.col -->
                                        <div class="col-xs-4 login_btn pull-right">
                                            <!-- <button type="submit" class="btn btn-primary btn-block btn-flat" name="save">Log In</button> -->
                                            <button type="submit" class="btn btn-primary btn-block btn-flat" name="save">Log In</button>

                                        </div>
                                        <!-- /.col -->
                                    </div>
                                </form>
                                <br>
                            </div>
                            <!-- /.login-box-body -->
                        </div>
                        <div class="login_footer"><small>Copyright Â© 2016-2017 Scopdail</small></div>
                    </div>
                </div>	

            </div>	
        </body>
    </html>
{% endblock %}    